  "files": [
    "dist",
    "node"
  ],
  "engines": {
    "node": ">=16.5.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@i-xi-dev/fundamental": "^2.2.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
